@import '~settings/_variables.styl';
// @import '~objects/_venue.styl'

:host
  display: block
  position: relative;

.time
  cursor: pointer

.header
  display: flex;

  @media screen and (max-width: 550px)
    display: block;

.grid
  display: block;

  display: grid;
  grid-auto-flow: dense;
  grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr

  @media screen and (max-width: 1200px)
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr

  @media screen and (max-width: 849px)
    grid-template-columns: 1fr 1fr 1fr

  @media screen and (max-width: 599px)
    grid-template-columns: 1fr 1fr

  @media screen and (max-width: 449px)
    grid-template-columns: 1fr

  .chi-session-item
    border: 1px solid black;
    // border-top: none;
    min-height: 70px;
    // for flex when grid is not supported

    // when grid is supported
    @supports (display: grid)
      width: auto;

    @supports not (display: grid)
      @media screen and (max-width: 449px)
        width: 100%;

  .chi-session-item[hidden]
    display: none;

  .chi-session-item[hidden-for-now]
    display: none;

  .chi-session-item[show-publications], .chi-session-item[force-show-publications]
    grid-column: 1 / 7;
    width: 100%;

    @media screen and (max-width: 1200px)
      grid-column: 1 / 6;

    @media screen and (max-width: 849px)
      grid-column: 1 / 4;

    @media screen and (max-width: 599px)
      grid-column: 1 / 3;

    @media screen and (max-width: 449px)
      grid-column: 1 / 2;

    @supports (display: grid)
      width: auto;

  .chi-session-item[force-close]
    grid-column: auto
    @media screen and (max-width: 449px)
      display: none;

  &.grey-border
    border-top: 4px solid $brand-grey

  &.blue-border
    border-top: 4px solid $brand-blue

  &.green-border
    border-top: 4px solid $brand-green

  &.yellow-border
    border-top: 4px solid $brand-yellow


  &.orange-border
    border-top: 4px solid $brand-orange

  &.pink-border
    border-top: 4px solid $brand-pink


.timeslot
  padding: 20px;

  .time
    margin: 0

.grey-timeslot
  background: $brand-grey;
  color: $light;

.blue-timeslot
  background: $brand-blue;
  color: $light;

.green-timeslot
  background: $brand-green;
  color: $light;

.yellow-timeslot
  background: $brand-yellow;
  color: $light;

.orange-timeslot
  background: $brand-orange;
  color: $light;

.pink-timeslot
  background: $brand-pink;
  color: $light;

.timeslot-time
  flex: 1;

.timeslot-name
  flex: 5;

  @media screen and (max-width: 1100px)
    flex: 4;

  @media screen and (max-width: 880px)
    flex: 3;

  @media screen and (max-width: 730px)
    flex: 2;

.chi-session-item
  // cursor: pointer;
  &:not([show-publications]):not([force-show-publications])
    cursor: pointer

  &.grey-item:hover:not([show-publications]):not([force-show-publications]), &.grey-item[force-close]
    background: $brand-grey;
    color: $light;

  &.blue-item:hover:not([show-publications]):not([force-show-publications]), &.blue-item[force-close]
    background: $brand-blue;
    color: $light;

  &.green-item:hover:not([show-publications]):not([force-show-publications]), &.green-item[force-close]
    background: $brand-green;
    color: $light;

  &.yellow-item:hover:not([show-publications]):not([force-show-publications]), &.yellow-item[force-close]
    background: $brand-yellow;
    color: $light;

  &.orange-item:hover:not([show-publications]):not([force-show-publications]), &.orange-item[force-close]
    background: $brand-orange;
    color: $light;

  &.pink-item:hover:not([show-publications]):not([force-show-publications]), &.pink-item[force-close]
    background: $brand-pink;
    color: $light;

.invi-anchor
  opacity: 0;
  z-index: -1;
  top: -82px;
  position: absolute

.header-anchor
  text-decoration: none
  color: inherit;

  &:hover
    text-decoration: underline

.header-anchor-icon
  text-decoration: none
  color: inherit;

.header-icon
  vertical-align: middle;
  width: 32px;
  height: 32px;
  margin-left: 10px;
  fill: $light;