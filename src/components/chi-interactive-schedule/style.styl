@import '~objects/_container.styl';
@import '~settings/_variables.styl';

:host
  display: block

.github-link
  color: inherit;

.venue-icon
  vertical-align: middle;
  height: 28px;
  margin: 0 10px;

.center-container
  border: 1px solid $brand-green;
  padding: 20px;
  margin: 20px 0;
  font-size: 80%;

  &.small-font
    font-size: 80%;

.center-container-center
  border: 1px solid $brand-green;
  padding: 10px;
  max-width: 1170px;
  margin: 10px auto;

  &.small-font
    font-size: 70%;

.searching
  padding: 40px;
  text-align: center;
  margin: 20px

.fab
  z-index: 10000;
  position: fixed;
  bottom: 20px;
  right: 20px;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  background: $brand-green;
  border: 0
  display: block
  padding: 20px;
  border-radius: 50%
  cursor: pointer

  .icon
    fill: $light;
    // width: 18px;
    // height: 18px

.chi-full-schedule-item[hidden]
  display: none;

.navigation
  &.on-top
    position: relative;

  &.fixed
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: white;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    display: none;
    z-index: 4000;

  &.fixed-phone
    position: fixed;
    top: 72px;
    left: 0;
    right: 0;
    background: white;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    display: none;
    z-index: 5000;
    overflow: auto;

  .nav-list
    list-style-type: none
    margin: 0;
    padding: 0;

  .nav-list-2
    list-style-type: none

  .desktop
    display: flex;
    flex-direction: row;
    align-items: center;

  .list-item
    margin: 0 10px;
    font-size: 90%;
    list-style-type: none

    .anchor
      color: inherit
      text-decoration: none;

    .anchor:hover
      text-decoration: underline;

  .search-item
    flex: 1
    text-align: right

    @media screen and (max-width: 600px)
      margin: 0;

  .schedule
    @media screen and (max-width: 1200px)
      display: none;

  .phone
    display: none

    @media screen and (max-width: 1200px)
      display: block

    @media screen and (max-width: 600px)
      margin: 0;

  .schedule-phone
    padding: 10px 0;

.icon
  width: 25px;
  height: 25px;

.nav-button
  margin: 10px 20px;
  background: none;
  fill: $dark;
  color: $dark;
  border: none;
  cursor: pointer;

  @media screen and (max-width: 650px)
    margin: 10px 0;

  &.hidden
    display: none;

  &:hover
    background: $dark;
    color: $light;
    fill: $light;

.search-container
  @media screen and (max-width: 1200px)
    .search
      width: 300px

  @media screen and (max-width: 740px)
    .search
      width: 200px

  @media screen and (max-width: 570px)
    .search
      width: auto

  @media screen and (max-width: 540px)
    .search
      width: 150px

.search-button
  background: none;
  border: 1px solid black;
  background: $brand-green;
  color: white;
  border-radius: 5px;
  cursor: pointer;
  padding: 5px 10px;
  font-size: 90%;
  @media screen and (max-width: 520px)
    display: none


.algolia
  width: 150px;
  vertical-align: middle;
  margin-right: 10px;

//   @media screen and (max-width: 860px)
//     display: none

// .algolia-icon
//   display: none
//   height: 30px;
//   vertical-align: middle;
//   margin-right: 10px;
//   @media screen and (max-width: 860px)
//     display: inline-block

.search-container
  @media screen and (max-width: 520px)
    display: flex;
    align-items: center;

    .search
      flex: 1

  @media screen and (max-width: 365px)
    .search
      width: 80px

  @media screen and (max-width: 320px)
    .search
      width: 60px

  @media screen and (max-width: 300px)
    .search
      width: 40px

.search-button-icon
  background: none;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 90%;
  display: none

  .icon
    fill: $brand-green;

  @media screen and (max-width: 520px)
    display: inline-block
    padding: 0

.filter-container
  padding: 20px
  position: fixed;
  top: 72px;
  left: 0;
  right: 0;
  background: white;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  z-index: 5000;
  display: none;
  overflow: auto;

  .filter-title
    margin: 0

  .filter-grid
    display: grid
    grid-template-columns: 1fr 1fr 1fr 1fr

    @media screen and (max-width: 1000px)
      grid-template-columns: 1fr 1fr 1fr

    @media screen and (max-width: 770px)
      grid-template-columns: 1fr 1fr

    @media screen and (max-width: 550px)
      grid-template-columns: 1fr

    .checkbox-container
      padding: 10px 20px;

      @media screen and (max-width: 550px)
        padding: 5px 20px

      @media screen and (max-height: 500px)
        padding: 0px 20px

.search
  padding: 10px
  font-size: 100%
  border: 2px solid $brand-green;
  border-radius: 10px;
  margin-right: 10px;

.footer
  text-align: center;
  position: fixed;
  padding: 20px;
  bottom: 0
  left: 0
  right: 0
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  background: $light;