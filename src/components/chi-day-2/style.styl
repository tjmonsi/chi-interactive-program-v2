:host
  display: block
  padding: 20px 0
  position: relative;

.chi-timeslot-item
  margin: 20px 0

.chi-timeslot-item[hidden]
  display: none;

.day
  font-size: 163%;

  @media screen and (max-width: 400px)
    font-size: 125%;

.header-icon
  vertical-align: middle;
  width: 32px;
  height: 32px;
  margin-left: 10px;
  cursor pointer;
  fill: $light;

.invi-anchor
  opacity: 0;
  z-index: -1;
  top: -102px;
  position: absolute