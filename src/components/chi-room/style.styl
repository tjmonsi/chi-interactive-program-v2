:host
  display: inline-block
  font-size: 90%;

.anchor
  text-decoration: none;
  color: inherit;
  cursor: pointer;

.anchor:hover
  text-decoration: underline;

.dialog-button
  background: none;
  fill: $dark;
  color: $dark;
  border: none;
  cursor: pointer;
  position: absolute;
  top: 10px;
  right: 10px;

  &:hover
    background: $dark;
    color: $light;
    fill: $light;

.icon
  width: 26px;
  height: 26px;

.map
  height: 80vh
  margin-top: 30px;

.gmap_canvas
  margin-top: 30px;
  background:none!important;
  height:500px;
  width:100%;