.search-container
  @media screen and (max-width: 520px)
    display: flex;
    align-items: center;

    .search
      flex: 1

  @media screen and (max-width: 365px)
    .search
      width: 80px

  @media screen and (max-width: 320px)
    .search
      width: 60px

  @media screen and (max-width: 300px)
    .search
      width: 40px

.search-button-icon
  background: none;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 90%;
  display: none

  .icon
    fill: $brand-green;

  @media screen and (max-width: 520px)
    display: inline-block
    padding: 0

.filter-container
  padding: 20px
  position: fixed;
  top: 72px;
  left: 20px;
  right: 20px;
  max-height: calc(100vh - 150px);
  background: white;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  z-index: 5000;
  display: none;
  overflow: auto;

  .filter-title
    margin: 0

  .filter-grid
    display: grid
    grid-template-columns: 1fr 1fr 1fr 1fr

    @media screen and (max-width: 1000px)
      grid-template-columns: 1fr 1fr 1fr

    @media screen and (max-width: 770px)
      grid-template-columns: 1fr 1fr

    @media screen and (max-width: 550px)
      grid-template-columns: 1fr

    .checkbox-container
      padding: 10px 20px;
      font-size: 80%

      @media screen and (max-width: 550px)
        padding: 5px 20px

      @media screen and (max-height: 500px)
        padding: 10px 10px

.search
  padding: 10px
  font-size: 100%
  border: 2px solid $brand-green;
  border-radius: 10px;
  margin-right: 10px;
