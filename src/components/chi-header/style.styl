@import '~settings/_variables.styl';
@import '~objects/_container.styl';

:host
  display: block

.venue-icon
  vertical-align: middle;
  height: 28px;
  margin: 0 10px;

.fixed-phone
  position: fixed;
  top: 72px;
  left: 0;
  right: 0;
  background: white;
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  display: none;
  z-index: 5000;
  overflow: auto;

.navigation

  .nav-list
    list-style-type: none
    margin: 0;
    padding: 0;

  .nav-list-2
    list-style-type: none

  .desktop
    display: flex;
    flex-direction: row;
    align-items: center;

  .list-item
    margin: 0 10px;
    font-size: 90%;
    list-style-type: none

    .anchor
      color: inherit
      text-decoration: none;

    .anchor:hover
      text-decoration: underline;

  .search-item
    flex: 1
    text-align: right

    @media screen and (max-width: 600px)
      margin: 0;

  .schedule
    @media screen and (max-width: 950px)
      display: none;

  .phone
    display: none

    @media screen and (max-width: 950px)
      display: block

    @media screen and (max-width: 600px)
      margin: 0;

  .schedule-phone
    padding: 10px 0;

.icon
  width: 25px;
  height: 25px;

.nav-button
  margin: 10px 20px;
  background: none;
  fill: $dark;
  color: $dark;
  border: none;
  cursor: pointer;

  @media screen and (max-width: 650px)
    margin: 10px 0;

  &.hidden
    display: none;

  &:hover
    background: $dark;
    color: $light;
    fill: $light;

.search-container
  @media screen and (max-width: 950px)
    .search
      width: 300px

  @media screen and (max-width: 740px)
    .search
      width: 200px

  @media screen and (max-width: 570px)
    .search
      width: auto

  @media screen and (max-width: 540px)
    .search
      width: 150px

.filter-button
  border: 1px solid black;
  background: $brand-green;
  color: white;
  border-radius: 5px;
  cursor: pointer;
  padding: 5px 10px;
  font-size: 90%;
  margin-top: 20px;
  float: right;

.search-button
  border: 1px solid black;
  background: $brand-green;
  color: white;
  border-radius: 5px;
  cursor: pointer;
  padding: 5px 10px;
  font-size: 90%;
  @media screen and (max-width: 520px)
    display: none


.algolia
  width: 150px;
  vertical-align: middle;
  margin-right: 10px;

