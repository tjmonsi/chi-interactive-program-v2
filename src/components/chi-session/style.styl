@import '~settings/_variables.styl';

:host
  display: block;
  padding: 10px 20px;
  position: relative;

  @media screen and (max-width: 400px)
    padding: 10px;

.mark
  background-color: $brand-green
  color: $light

.title
  font-size: 14px
  margin: 0

  a
    text-decoration: none
    color: inherit

  a:hover
    text-decoration: underline

.venue
  margin: 10px 0 0 0;
  font-size: 14px

  img
    vertical-align: middle;
    height: 20px;

.publications
  padding: 20px 0;

.chi-publication-item
  padding: 20px;
  background: white;
  color: $dark;

.chi-publication-item[hidden]
  display: none;

.chi-room-item
  padding: 10px 0 0 0

.invi-anchor
  opacity: 0;
  z-index: -1;
  top: -102px;
  position: absolute

.icon
  width: 18px;
  height: 18px;