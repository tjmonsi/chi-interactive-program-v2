@import '~settings/_variables.styl';

:host
  display: block;
  padding: 10px 20px;

  @media screen and (max-width: 400px)
    padding: 10px;

h3
  margin: 0

  a
    text-decoration: none
    color: inherit

  a:hover
    text-decoration: underline

.venue
  margin: 10px 0 0 0;

  img
    vertical-align: middle;
    height: 20px;

section
  padding: 20px 0;

chi-publication
  padding: 20px;
  background: white;
  color: $dark;

chi-publication[hidden]
  display: none;

chi-room
  padding: 10px 0 0 0