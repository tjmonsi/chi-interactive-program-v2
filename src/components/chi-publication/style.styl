@import '~settings/_variables.styl';

:host
  display: block
  position: relative

.mark
  background: $brand-green
  color: $light

.icon-title
  width: 18px;
  height: 18px;

.title
  margin: 0

  .anchor
    color: inherit;
    text-decoration: none;

  .anchor:hover
    text-decoration: underline;

  .img-icon, .icon
    vertical-align: middle;
    height: 32px;
    width: 32px;

  .icon
    margin-left: 10px;

.authors-heading
  margin: 20px 0 0 0

.pub-body
  padding: 0 20px;

.chi-author-summary-item
  &:after
    content: ', '

  &:last-of-type
    &:after
      content: ''

.authors
  margin: 0;
  list-style-type: none;

  .list-item
    list-style-type: none

.invi-anchor
  opacity: 0;
  z-index: -1;
  top: -102px;
  position: absolute

